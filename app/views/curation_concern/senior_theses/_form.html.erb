<%= curation_concern_form_for [:curation_concern, curation_concern] do |f| %>
  <% if f.error_notification -%>
    <div class="alert alert-error fade in">
      <strong>Wait don't go!</strong> There was a problem with your submission. Please review the errors below:
      <a class="close" data-dismiss="alert" href="#">&times;</a>
    </div>
  <% end -%>

  <%= accordion(accordion_id: 'accordion') do |container| %>

    <%= container.pane("Required Information", class: 'required') do %>
      <fieldset class="required">
        <legend>This is what we need to know about your Senior Thesis</legend>
        <%= f.input :title, input_html: { class: 'input-xxlarge'} %>
        <%= f.input :creator, input_html: { class: 'input-xlarge', placeholder: 'George Washington' } %>
        <%= f.input :description, input_html: { class: 'input-xxxlarge', rows: '9' } %>
        <%= f.input :date_created, input_html: { class: 'datepicker', placeholder: Date.today } %>
      </fieldset>
      <%= render 'form_content_license', curation_concern: curation_concern, f: f %>
      <%= render "form_permission", curation_concern: curation_concern, f: f %>
      <%= render "form_doi", curation_concern: curation_concern, f: f %>
    <% end %>

    <%= container.pane("Additional Information and Metadata", class: 'optional prompt') do %>
      <fieldset class="optional prompt">
        <legend>Any additional information is optional, but helpful for others looking to find your work.</legend>
        <%= f.input :advisor,
                    input_html: { placeholder: 'Prof. Roy Hinkley', class: 'input-xlarge' }
        %>
        <%= f.input :contributor,
                    input_html: { class: 'input-xlarge' }
        %>
        <%= f.input :subject,
                    input_html: { class: 'input-xlarge' }
        %>
        <%= f.input :bibliographic_citation,
                    input_html: { class: 'input-xlarge' }
        %>
        <%= f.input :language,
                    input_html: { class: 'input-xlarge'}
        %>
        <%= f.input :publisher,
                    input_html: { class: 'input-xlarge' }
        %>
      </fieldset>
    <% end %>

    <%= container.pane("Files") do %>
      <fieldset>
        <legend>
          Manage your <%= curation_concern.human_readable_type %> files
          <small>A PDF copy is preferred.</small>
        </legend>
        <%= f.input :files,
                    as: :file,
                    label: "Upload Files",
                    hint: "CTRL-Click (Windows) or CMD-Click (Mac) to select multiple files.",
                    input_html: { multiple: 'multiple'}
        %>
      </fieldset>
      <% if curation_concern.persisted? %>
        <%= render 'form_manage_related_files', curation_concern: curation_concern, f: f %>
      <% end %>
    <% end %>

  <% end %>

  <%= render 'form_contributor_agreement', curation_concern: curation_concern, contributor_agreement: contributor_agreement %>

  <div class="row">
    <div class="span12 form-actions">
      <% if curation_concern.persisted? %>
        <%= f.submit(class: 'btn btn-primary') %>
      <% else %>
        <%= f.submit(
          title: "Submit your #{curation_concern.human_readable_type} after you accept the Content Submission Terms.",
          class: 'btn btn-primary require-contributor-agreement'
        ) %>
      <% end %>
      <%= link_to 'Cancel', catalog_index_path, class: 'btn btn-link' %>
    </div>
  </div>

<% end %>
