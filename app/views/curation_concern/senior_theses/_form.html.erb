<%= simple_form_for [:curation_concern, curation_concern] do |f| %>
  <% if f.error_notification -%>
    <div class="alert alert-error fade in">
      <strong>Wait don't go!</strong> There was a problem with your submission. Please review the errors below:
      <a class="close" data-dismiss="alert" href="#">&times;</a>
    </div>
  <% end -%>

  <%= accordion(accordion_id: 'accordion') do |container| %>

    <%= container.pane(raw("Required Information&hellip;"), class: 'required', open_next: 'true') do %>
      <fieldset class="required">
        <legend>This is what we need to know about your Senior Thesis</legend>
        <%= f.input :title, hint: help_icon('title').html_safe, input_html: { class: 'input-xlarge' } %>
        <%= f.input :description,
                    as: :text,
                    hint: help_icon('description'),
                    input_html: {
                      class: 'input-xxxlarge',
                      rows: '9'
                    },
                    label: get_label('description')
        %>
      </fieldset>
      <%= render '/curation_concern/content_license', f: f %>
      <%= render "/curation_concern/doi", curation_concern: curation_concern, f: f %>
    <% end %>

    <%= container.pane(raw("Additional Information and Metadata&hellip;"), class: 'optional prompt', open_next: 'true') do %>
      <fieldset class="optional prompt">
        <legend>Any additional information is optional, but helpful for others looking to find your work.</legend>
        <%= f.input :contributor,             as: :multi_value, input_html: { class: 'input-xlarge' }, hint: help_icon('contributor') %>
        <%= f.input :subject,                 as: :multi_value, input_html: { class: 'input-xlarge' }, hint:help_icon('subject') %>
        <%= f.input :publisher,               as: :multi_value, input_html: { class: 'input-xlarge' }, hint:help_icon('publisher') %>
        <%= f.input :bibliographic_citation,  as: :multi_value, input_html: { class: 'input-xlarge' }, hint:help_icon('bibliographic_citation') %>
        <%= f.input :source,                  as: :multi_value, input_html: { class: 'input-xlarge' }, hint:help_icon('source') %>
        <%= f.input :language,                as: :multi_value, input_html: { class: 'input-xlarge' }, hint:help_icon('language') %>
      </fieldset>
    <% end %>

    <%= container.pane(raw("Access and Permissions&hellip;"), open_next: 'true') do %>
      <%= render "/curation_concern/permission", curation_concern: curation_concern, f: f %>
    <% end %>

    <%= container.pane(raw("Files&hellip;")) do %>
      <fieldset>
        <legend>
          Manage your <%= curation_concern.human_readable_type %> files
          <small>A PDF copy is preferred.</small>
        </legend>
        <%= f.input :files,
                    as: :file,
                    label: get_label(:files),
                    hint: help_icon(:files),
                    input_html: { multiple: 'multiple'}
        %>
      </fieldset>
      <% if curation_concern.persisted? %>
        <%= render '/curation_concern/manage_related_files', curation_concern: curation_concern, f: f %>
      <% end %>
    <% end %>

  <% end %>

  <%= render '/curation_concern/contributor_agreement', curation_concern: curation_concern, contributor_agreement: contributor_agreement %>

  <div class="row">
    <div class="span12 form-actions">
      <% if curation_concern.persisted? %>
        <%= f.submit(class: 'btn btn-primary') %>
      <% else %>
        <%= f.submit(
          title: "Submit your #{curation_concern.human_readable_type} after you accept the Content Submission Terms.",
          class: 'btn btn-primary require-contributor-agreement'
        ) %>
      <% end %>
      <%= link_to 'Cancel', dashboard_index_path, class: 'btn btn-link' %>
    </div>
  </div>

<% end %>
