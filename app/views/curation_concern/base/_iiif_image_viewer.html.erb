<% manifest_url = manifest_url_for(id: curation_concern.id) %>
<%= javascript_include_tag 'viewer_build' %>

<% if viewer_build(manifest_url) %>
<div class="row">
  <div class="work-representation span12">
    <iframe src='https://universalviewer.io/uv.html?manifest=<%= manifest_url %>'></iframe>
  </div>
</div>
<div class="row">
  <div class="work-attributes span12">
    <%= details %>
  </div>
</div>
<% else %>
  <% render partial: 'curation_concern/base/representative', locals: { work: curation_concern, details: details } %>
<% end %>
