<table class="table table-striped <%= dom_class(curation_concern) %> attributes">
  <caption class="table-heading"><h2>Attributes</h2></caption>
  <thead>
    <tr><th>Attribute Name</th><th>Values</th></tr>
  </thead>
  <tbody>

  <%= curation_concern_attribute_to_html(curation_concern, :alternate_title,            'Alternate Title') %>
  <%= curation_concern_attribute_to_formatted_text(curation_concern, :abstract,         'Description') %>
  <%= curation_concern_attribute_to_html(curation_concern, :creator,                    'Author') %>
  <%= curation_concern_attribute_to_html(curation_concern, :issued_by,                  'Issued By') %>
  <%= curation_concern_attribute_to_html(curation_concern, :promulgated_by,             'Promulgated By') %>
  <%= curation_concern_attribute_to_html(curation_concern, :date_issued,                'Date Published') %>
  <%= curation_concern_attribute_to_html(curation_concern, :date,                       'Date Issued') %>
  <%= curation_concern_attribute_to_html(curation_concern, :promulgated_date,           'Date Promulgated') %>
  <%= curation_concern_attribute_to_html(curation_concern, :subject,                    'Subjects') %>
  <%= curation_concern_attribute_to_html(curation_concern, :extent,                     'Number of Pages') %>
  <%= curation_concern_attribute_to_html(curation_concern, :spatial_coverage,           'Spatial Coverage') %>
  <%= curation_concern_attribute_to_html(curation_concern, :temporal_coverage,          'Temporal Coverage') %>
  <%= curation_concern_attribute_to_html(curation_concern, :language,                   'Language') %>
  <%= curation_concern_attribute_to_html(curation_concern, :type,                       'Document Type') %>
  <%= curation_concern_attribute_to_html(curation_concern, :repository_name,            'Repository') %>
  <%= curation_concern_attribute_to_html(curation_concern, :publisher,                  'Publisher') %>
  <%= curation_concern_attribute_to_html(curation_concern, :source,                     'Source') %>
  <%= curation_concern_attribute_to_html(curation_concern, :rights_holder,              'Rights Holder') %>
  <%= curation_concern_attribute_to_html(curation_concern, :copyright_date,             'Copyright Date') %>
  <%= curation_concern_attribute_to_html(curation_concern, :requires,                   'Requires') %>
  <%= curation_concern_attribute_to_html(curation_concern, :alephIdentifier,            'Catalog Record') %>

  <tr>
    <th>Record Visibility</th>
    <td>
      <%= render partial: 'permission_badge', locals: { curation_concern: curation_concern } %>
    </td>
  </tr>

  <%= curation_concern_attribute_to_html(curation_concern, :embargo_release_date, 'Embargo Release Date') %>
  <%= curation_concern_attribute_to_html(curation_concern, :rights, "Content License") %>
  <%= curation_concern_attribute_to_html(curation_concern, :permission, "Use Permissions") %>
  <% if curation_concern.type_of_license == "Independently Licensed" %>
    <%= curation_concern_attribute_to_html(curation_concern, :license, "License Agreement") %>
  <% end %>

  <%= decode_administrative_unit(curation_concern, :administrative_unit, 'Departments and Units') %>
  <%= curation_concern_attribute_to_html(curation_concern, :library_collections, "Member of") %>
  </tbody>
</table>
