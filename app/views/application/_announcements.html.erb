<%# <%- if Admin::Announcement.for(current_user).any? -%>
  <div id="announcements" class="container">
    <div class="row">
      <div class="span12 announcement-listing">
        <div class="announcement alert alert-info">
          <span class="announcement-text">
                ATTENTION: CurateND will become read-only on November 1 for an infrastructure update.</br>
                We anticipate this update will be completed by December 8.</br></br>

                Submissions cannot be accepted during this window while we upgrade to our new platform.</br>
                Thank you for your patience.</br>
                If you have any questions, contact the CurateND team at <a href="mailto:curate@nd.edu">curate@nd.edu</a>.
          </span>
        </div>
        <% Admin::Announcement.for(current_user).each do |announcement| %>
          <div class="announcement alert alert-info">
            <span class="announcement-text">
            <%= announcement %>
            </span>

            <%= button_to dismiss_announcement_path(id: announcement), method: :delete, remote: true, form_class: 'close', class: 'announcement-dismiss btn btn-link' do %>
              <span class="icon icon-remove"></span>
              <span class="visuallyhidden">
                Dismiss this announcement
              </span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<%# <%- end -%>

