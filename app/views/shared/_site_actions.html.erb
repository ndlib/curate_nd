<%
  on_faqs_page = current_page?(controller: 'static_pages', action: 'faqs') rescue false
  faq_page_classes = 'btn btn-primary faq'
  faq_page_classes << ' active' if on_faqs_page
%>

<%= render 'shared/about' %>
<% if current_user %>
  <%= render 'shared/add_content' %>
  <%= render 'shared/my_actions' %>
<% else %>
  <%= link_to 'Log In', new_user_session_path, class: 'btn btn-primary login', role: 'menuitem' %>
<% end %>
<%= link_to 'FAQ', '/faqs', class: faq_page_classes, role: 'menuitem' %>
