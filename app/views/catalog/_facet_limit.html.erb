<%
  paginator = Blacklight::Solr::FacetPaginator.new(
    display_facet.items,
    limit: facet_limit_for(solr_field)
  )
 %>
<ul class="slide-list">
  <% paginator.items.each do |item| -%>
  <li>
    <% if facet_in_params?(solr_field, item.value) %>
      <%= render_selected_facet_value(solr_field, item).split("(").join('(<small>').split(")").join("</small>)").html_safe %>
    <% else %>
      <%= render_facet_value(solr_field, item).split("(").join('(<small>').split(")").join("</small>)").html_safe %>
    <% end %>
  </li>
  <% end %>
<% if paginator.total_count > paginator.limit  %>
  <li class="more_facets_link">
    <%= link_to 'Show more', params.merge(id: solr_field, action: 'facet'), class: 'btn btn-link more_facets_link' %>
  </li>
<% end %>
</ul>
