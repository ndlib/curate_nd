@import 'global-variables';

.page-main.policies {
  border-bottom: 1px solid $gray-faint;
}

.policy-page-header {
  padding: 1em;
  text-align: center;
}

.policy-box {
  max-width: 62em;
  margin: 1em auto 1em;
  padding-bottom: 2em;

  .policy-content {
    background-color: white;
    border: 1px solid $gray-faint;
    padding: 1em 1em 1em;

    ul {
      margin: 2;
    }

    .policy-list {
      p {
        margin-bottom: 1em;
      }

      .policy-heading {
        padding-top: 1em;
        border-bottom: 1px solid $gray-light;
      }

      .policy-subheading {
        font-size: 20px;
        font-weight: bold;
        padding-top: 1em;
        padding-bottom: 1em;
      }

      .policy-subcategory {
        font-size: 18px;
        padding-bottom: 1em;
      }

      .policy-explanation {
        padding: 1em 0 1em 0;
      }

      .quote {
        font-style: italic;
      }

      .emphasis {
        font-weight: bold;
        font-variant: small-caps;
        font-size: 12px;
        // color: $gray-dark;
        background-color: $blue-light;
        border-radius: 5px;
        padding: 0 7px 2px 5px;
        color: $gray;
      }

      .footnotes {
        &:before {
          border-bottom: 1px solid $gray-light;
          content: '';
          display: block;
          margin: .5em 0 .5em 0;
          width: 10em;
        }
      }
    }
  }
}

@media print {
  .print {
    display: none;
  }
}
